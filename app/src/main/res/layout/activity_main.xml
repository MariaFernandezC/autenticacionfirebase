<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="311dp"
                    android:layout_height="346dp"
                    app:srcCompat="@drawable/projectgps"
                    android:contentDescription="TODO" />

                <EditText
                    android:id="@+id/edtUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:drawableLeft="@drawable/ic_person"
                    android:ems="10"
                    android:hint="Ingrese un email"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:text="@string/edtUsuario"
                    android:textColor="#1e8449" />

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:drawableLeft="@drawable/ic_pass"
                    android:ems="10"
                    android:hint="Ingrese una contraseÃ±a"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:text="@string/edtPassword"
                    android:textColor="#1e8449" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:background="#1e8449"
                    android:text="@string/btnLogin"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    tools:text="Registrarse" />

                <TextView
                    android:id="@+id/RegistroLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="30dp"
                    android:text="Registrarse con Google"
                    android:textAlignment="center"
                    android:textColor="#1e8449"
                    android:textIsSelectable="false"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>